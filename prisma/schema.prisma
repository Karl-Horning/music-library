// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artist {
  id      String @id @map("id")
  name    String
  albums  Album[]
}

model Album {
  id          String @id @map("id")
  title       String
  year        Int
  artist_id   String @map("artist_id")
  artist      Artist @relation(fields: [artist_id], references: [id])
}